# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uniorder
DB_USER=uniorder_user
DB_PASSWORD=uniorder_password
DATABASE_URL=postgresql://uniorder_user:uniorder_password@localhost:5432/uniorder

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Third-party API Configuration
JAHEZ_API_BASE_URL=https://api.jahez.net/v1
JAHEZ_API_KEY=your_jahez_api_key_here
HUNGERSTATION_API_BASE_URL=https://api.hungerstation.com/v1
HUNGERSTATION_API_KEY=your_hungerstation_api_key_here
KEETA_API_BASE_URL=https://api.keeta.com/v1
KEETA_API_KEY=your_keeta_api_key_here

# Webhook Secrets (provided by delivery platforms)
JAHEZ_WEBHOOK_SECRET=jahez_webhook_secret_here
HUNGERSTATION_WEBHOOK_SECRET=hungerstation_webhook_secret_here
KEETA_WEBHOOK_SECRET=keeta_webhook_secret_here

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=1.0.0
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100